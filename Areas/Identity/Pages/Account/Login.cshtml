@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
}

<div class="row">
    <div class="col-sm-6 login-section-wrapper">
        <section>
            <form id="account" method="post">
                @*<div class="brand-wrapper">
                    <img src="~/Images/logo.svg" alt="logo" class="logo">
                </div>*@
                <div class="login-wrapper my-auto">
                    <h1 class="login-title">تسجيل الدخول</h1>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label for="email">إسم المستخدم</label>
                        @*<label asp-for="Input.UserName" class="form-label"></label>*@
                        <input asp-for="Input.UserName" class="form-control mt-2" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label for="email">كلمة المرور</label>
                        @*<label asp-for="Input.Password" class="form-label"></label>*@
                        <input asp-for="Input.Password" class="form-control mt-2" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    @*<div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>*@
                    <div class="form-group col-12">
                        <button id="login-submit" type="submit" class="btn btn-block login-btn mt-4">تسجيل الدخول</button>
                    </div>
                    <div class="form-group col-12">
                        <label>إسم المستخدم: NormalUser</label>
                    </div>
                    <div class="form-group col-12 text-right">
                        <label>كلمة المرور:</label>
                        <label>.123456Aa</label>
                    </div>
                    @*<a href="#!" class="forgot-password-link">Forgot password?</a>
                        <p class="login-wrapper-footer-text">Don't have an account? <a href="#!" class="text-reset">Register here</a></p>*@
                </div>
            </form>
        </section>
    </div>
    <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="~/Images/loginNew.jpg" alt="login image" class="login-img">
    </div>
</div>

