@model IEnumerable<Etaa.Models.Projects>

@{
    ViewData["Title"] = "بيانات المشاريع";
}

<h1><i class="fa-solid fa-list"></i> بيانات المشاريع</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table table-striped" id="tblProjects" style="width:100%">
    <thead>
        <tr>
            <th class="text-end">
                @Html.DisplayNameFor(model => model.NameAr)
            </th>
            <th class="text-end">
                @Html.DisplayNameFor(model => model.NameEn)
            </th>
            <th class="text-end">
                @Html.DisplayNameFor(model => model.ProjectActivity)
            </th>
            <th class="text-end">
                @Html.DisplayNameFor(model => model.ProjectPurpose)
            </th>
            <th class="text-end">
                @Html.DisplayNameFor(model => model.Capital)
            </th>
            <th class="text-end">
                @Html.DisplayNameFor(model => model.MonthlyInstallmentAmount)
            </th>
            <th class="text-end">
                @Html.DisplayNameFor(model => model.NumberOfInstallments)
            </th>
            <th class="text-end">
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th class="text-end">
                @Html.DisplayNameFor(model => model.WaiverPeriod)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.IsCanceled)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameAr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectActivity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectPurpose)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capital)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonthlyInstallmentAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfInstallments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WaiverPeriod)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.IsCanceled)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProjectId" class="btn btn-outline-info btn-sm">التعديل</a> |
                <a asp-action="Details" asp-route-id="@item.ProjectId" class="btn btn-outline-secondary btn-sm mt-2">التفاصيل</a> |
                <a asp-action="Delete" asp-route-id="@item.ProjectId" class="btn btn-outline-danger btn-sm mt-2">الحذف</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="text-dark" style="position: fixed; right: 30px; bottom: 70px;">
    <a asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> إضافة مشروع</a>
</div>


@section Scripts{
    <script>
        $(document).ready( function () {
            $('#tblProjects').DataTable({
                "language": {
                    processing: "جاري المعالجة ",
                    search: "البحث:  ",
                    lengthMenu:    "إظهار _MENU_ سجلات",
                    info:           "إظهار _START_ إلى _END_ من _TOTAL_ سجل",
                    infoEmpty:      "إظهار 0 إلى 0 من 0 سجلات",
                    loadingRecords: "جاري معالجة السجلات...",
                    zeroRecords:    "لا توجد سجلات !",
                    emptyTable:     "لا توجد بيانات !",
                    paginate: {
                        first:      "الأول",
                        previous:   "السابق",
                        next:       "التالي",
                        last:       "الأخير"
                    }
              }
            });
        });
    </script>

    @if (TempData["FinancialStatemntId"] != null)
                {
                    <script>
                        $(function () {
                                    swal({
                                      title: "لم يتم الحفظ !",
                                      text: "هنالك إقرار  مالي تابع لهذا المشروع !",
                                      icon: "info"
                                    });
                                });
                            </script>
                }
    @if (TempData["ClearanceId"] != null)
    {
        <script>
            $(function () {
                        swal({
                          title: "لم يتم الحفظ !",
                          text: "هنالك خلو طرف تابع لهذا المشروع !",
                          icon: "info"
                        });
                    });
                </script>
    }
    @if (TempData["PaymentVoucherId"] != null)
    {
        <script>
            $(function () {
                        swal({
                          title: "لم يتم الحفظ !",
                          text: "هنالك مستندات دفع لهذا المشروع !",
                          icon: "info"
                        });
                    });
                </script>
    }
    @if (TempData["ProjectError"] != null)
    {
        <script>
            $(function () {
                        swal({
                          title: "لم تتم العملية !",
                          text: "الرجاء التحقق من المدخلات !",
                          icon: "error"
                        });
                    });
                </script>
    }
    @if (TempData["Project"] != null)
    {
        <script>
            $(function () {
                        swal({
                          title: "تمت العملية بنجاح !",
                          text: "تمت العملية بنجاح !",
                          icon: "success"
                        });
                    });
                </script>
    }
}
