@model IEnumerable<Etaa.Models.Projects>

@{
    ViewData["Title"] = "بيانات المشاريع";
}

<h1><i class="fa-solid fa-list"></i> بيانات المشاريع</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectActivity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectPurpose)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capital)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthlyInstallmentAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfInstallments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WaiverPeriod)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameAr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectActivity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectPurpose)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capital)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonthlyInstallmentAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfInstallments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WaiverPeriod)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProjectId">التعديل</a> |
                <a asp-action="Details" asp-route-id="@item.ProjectId">التفاصيل</a> |
                <a asp-action="Delete" asp-route-id="@item.ProjectId">الحذف</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="text-dark" style="position: fixed; right: 30px; bottom: 70px;">
    <a asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> إضافة مشروع</a>
</div>


@section Scripts{
    @if (TempData["FinancialStatemntId"] != null)
                {
                    <script>
                        $(function () {
                                    swal({
                                      title: "لم يتم الحفظ !",
                                      text: "هنالك إقرار  مالي تابع لهذا المشروع !",
                                      icon: "info"
                                    });
                                });
                            </script>
                }
    @if (TempData["ClearanceId"] != null)
    {
        <script>
            $(function () {
                        swal({
                          title: "لم يتم الحفظ !",
                          text: "هنالك خلو طرف تابع لهذا المشروع !",
                          icon: "info"
                        });
                    });
                </script>
    }
    @if (TempData["PaymentVoucherId"] != null)
    {
        <script>
            $(function () {
                        swal({
                          title: "لم يتم الحفظ !",
                          text: "هنالك مستندات دفع لهذا المشروع !",
                          icon: "info"
                        });
                    });
                </script>
    }
    @if (TempData["Project"] != null)
    {
        <script>
            $(function () {
                        swal({
                          title: "تمت العملية بنجاح !",
                          text: "تمت العملية بنجاح !",
                          icon: "success"
                        });
                    });
                </script>
    }
}
