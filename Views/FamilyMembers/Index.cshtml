@model IEnumerable<Etaa.Models.FamilyMember>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="AddOrEdit" class="btn btn-outline-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kinship)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EducationalStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Family)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameAr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kinship.NameAr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationalStatus.NameAr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Family.NameAr)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FamilyMemberId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FamilyMemberId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FamilyMemberId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
