@model Etaa.Models.Family

@{
    ViewData["Title"] = "Create";
}

<script type="text/javascript">
    $(function () {
        $("#StatesList").change(function () {
            $.getJSON("@Url.Action("LoadCities")", { StateId: $("#StatesList").val() }, function (d) {
                var row = "";
                $("#CitiesList").empty();
                $.each(d, function (i, v) {
                    row += "<option value=" + v.value + ">" + v.text + "</option>";
                });
                $("#CitiesList").html(row);
            })
        })

        $("#CitiesList").change(function () {
            $.getJSON("@Url.Action("LoadDistricts")", { CityId: $("#CitiesList").val() }, function (d) {
                var row = "";
                $("#DistrictId").empty();
                $.each(d, function (i, v) {
                    row += "<option value=" + v.value + ">" + v.text + "</option>";
                });
                $("#DistrictId").html(row);
            })
        })

        // Just english letters
        $("#NameEn").keypress(function(event){
            var ew = event.which;
            if(ew == 32)
                return true;
            // This is to accept numbers
            //if(48 <= ew && ew <= 57)
            //    return true;
            // This for capital english letters
            if(65 <= ew && ew <= 90)
                return true;
            // This for small english letters
            if(97 <= ew && ew <= 122)
                return true;
            return false;
        });

        // Just arabic letters
        $("#NameAr").keypress(function(event){
            var arabicCharUnicodeRange = /[\u0600-\u06FF]/;
            var ew = event.which;
            if(ew == 32)
                return true;
            if(ew == 169)
                return true;

            var str = String.fromCharCode(ew);
            if (arabicCharUnicodeRange.test(str) )
            {
              return true;
            }
            return false;
        });

        $("#Address").keypress(function(event){
            var arabicCharUnicodeRange = /[\u0600-\u06FF]/;
            var ew = event.which;
            if(ew == 32)
                return true;
            if(ew == 169)
                return true;

            var str = String.fromCharCode(ew);
            if (arabicCharUnicodeRange.test(str) )
            {
              return true;
            }
            return false;
        });

        $("#Alleyway").keypress(function(event){
            var arabicCharUnicodeRange = /[\u0600-\u06FF]/;
            var ew = event.which;
            if(ew == 32)
                return true;
            if(ew == 169)
                return true;

            var str = String.fromCharCode(ew);
            if (arabicCharUnicodeRange.test(str) )
            {
              return true;
            }
            return false;
        });

        $("#ResidentialSquare").keypress(function(event){
            var arabicCharUnicodeRange = /[\u0600-\u06FF]/;
            var ew = event.which;
            if(ew == 32)
                return true;
            if(ew == 169)
                return true;

            var str = String.fromCharCode(ew);
            if (arabicCharUnicodeRange.test(str) )
            {
              return true;
            }
            return false;
        });

        // Just english or arabic letters without numbers
        //$('#Address').keydown(function (e) {
        //  if (e.shiftKey || e.ctrlKey || e.altKey) {
        //      e.preventDefault();
        //  } else {
        //      var key = e.keyCode;
        //      if (!((key == 8) || (key == 32) || (key == 46) || (key >= 35 && key <= 40) || (key >= 65 && key <= 90))) {
        //          e.preventDefault();
        //      }
        //  }
        //});
    }); 
</script>

